<%- include('./partials/head', {head:'', title: post.title.rendered}); -%>
<link rel="stylesheet" href="/styles/post.css" type="text/css">

</head>


<body>

<%- include('./partials/header',{header:'',img_src: post.yoast_head_json.og_image[0].url}); -%>

<main class="post_article" >
	<br>
	<section class="intro_titles">
		
		<div class="intro_landmark">
			<h1><%- post.title.rendered %></h1>

			<img 
			decoding="async" 
			src="<%= post.yoast_head_json.og_image[0].url %>" 
			width="<%= post.yoast_head_json.og_image[0].width %>"
			height="<%= post.yoast_head_json.og_image[0].height %>"
			>
			<!-- aside content -->
			<aside class="intro_info">
				<ul>
					<br>
					<li>
						<p>author</p>
						
						<!-- <a href="<%= post.yoast_head_json.schema["@graph"][6].url %>"><strong><%= post.yoast_head_json.schema["@graph"][6].name %></strong></a> -->
						<a href="/author/<%= post.author %>"><strong><%= post.yoast_head_json.schema["@graph"][6].name %></strong></a>
					</li>
					<br>
					<li>
						<p>leestijd</p>
						<strong><%= post.yoast_head_json.twitter_misc["Geschatte leestijd"] %></strong>
					</li>
				</ul>

			</aside>
			<aside></aside>
		</div>
	</section>
	<br>
	<!-- article inleiding -->
	<section class="inleiding_section">
		<div class="inleiding_recenties">
			<p class="seen">
				
				<span> <svg  xmlns="http://www.w3.org/2000/svg"  width="24"  height="24"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-eye"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M10 12a2 2 0 1 0 4 0a2 2 0 0 0 -4 0" /><path d="M21 12c-2.4 4 -5.4 6 -9 6c-3.6 0 -6.6 -2 -9 -6c2.4 -4 5.4 -6 9 -6c3.6 0 6.6 2 9 6" /></svg></span>
				<span><%= locals.pageViews[post.id] %></span>
				
			</p>

			
			<%- include('./partials/share') %>

			<%- include('./partials/like') %>
			

			<div>
				<button >reading mode</button>
			</div>
						


		</div>
		<div class="inleiding_text">
			<h3><%- post.excerpt.rendered %></h2>
		</div>
	</section>
	<br>
	<br>
	<!-- article content -->
	<section class="post_article_content">
		<article><%- post.content.rendered %></article>
	</section>
</main>

<%- include('./partials/foot'); -%>